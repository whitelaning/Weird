<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/songRootLayout"
    android:layout_width="match_parent"
    android:layout_height="180px"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/musicMore"
        android:layout_width="120px"
        android:layout_height="120px"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20px"
        android:padding="30px"
        android:src="@drawable/list_icn_more" />

    <ImageView
        android:id="@+id/isPlayView"
        android:layout_width="48px"
        android:layout_height="48px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30px"
        android:src="@drawable/play_playlist_icn_playing"
        android:visibility="gone" />

    <TextView
        android:id="@+id/musicName"
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:layout_marginLeft="30px"
        android:layout_marginTop="30px"
        android:layout_toLeftOf="@+id/musicMore"
        android:layout_toRightOf="@+id/isPlayView"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="@color/text_color_black"
        android:textSize="45px" />

    <TextView
        android:id="@+id/musicSinger"
        android:layout_width="match_parent"
        android:layout_height="45px"
        android:layout_below="@+id/musicName"
        android:layout_marginBottom="30px"
        android:layout_marginLeft="60px"
        android:layout_marginTop="10px"
        android:layout_toLeftOf="@+id/musicMore"
        android:layout_toRightOf="@+id/isPlayView"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="@color/text_color_default"
        android:textSize="35px" />

</RelativeLayout>