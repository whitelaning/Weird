<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="180px"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/musicAlbum"
        android:layout_width="160px"
        android:layout_height="160px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30px"
        android:layout_marginRight="20px"
        android:padding="10px" />

    <ImageView
        android:id="@+id/isPlayView"
        android:layout_width="58px"
        android:layout_height="58px"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="40px"
        android:src="@drawable/play_playlist_icn_playing"
        android:visibility="gone" />

    <TextView
        android:id="@+id/musicName"
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:layout_marginTop="30px"
        android:layout_toLeftOf="@+id/isPlayView"
        android:layout_toRightOf="@+id/musicAlbum"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="@color/text_color_black"
        android:textSize="45px" />

    <TextView
        android:id="@+id/musicNumber"
        android:layout_width="match_parent"
        android:layout_height="45px"
        android:layout_below="@+id/musicName"
        android:layout_marginBottom="30px"
        android:layout_marginTop="10px"
        android:layout_toLeftOf="@+id/isPlayView"
        android:layout_toRightOf="@+id/musicAlbum"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="@color/text_color_default"
        android:textSize="35px" />

</RelativeLayout>