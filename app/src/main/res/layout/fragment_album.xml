<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/mLayoutBottomRoot"
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:layout_alignParentBottom="true"
        android:background="@color/black">

        <ImageView
            android:id="@+id/mCamera"
            android:layout_width="140px"
            android:layout_height="140px"
            android:layout_centerInParent="true"
            android:padding="20px"
            android:src="@drawable/ic_camera_20160124" />
    </RelativeLayout>

    <com.framework.android.view.ProgressLayout
        android:id="@+id/mProgressLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/mLayoutBottomRoot"
        android:background="@color/black"
        android:orientation="vertical">

        <GridView
            android:id="@+id/mGroupImagesGv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="@android:color/transparent"
            android:gravity="center"
            android:horizontalSpacing="5dp"
            android:listSelector="@android:color/transparent"
            android:numColumns="2"
            android:padding="5dp"
            android:stretchMode="columnWidth"
            android:verticalSpacing="5dp" />

    </com.framework.android.view.ProgressLayout>

</RelativeLayout>